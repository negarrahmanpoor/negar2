<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150"
            android:layout_marginLeft="150"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="100"
                android:layout_height="50"
                android:layout_marginStart="10"
                android:layout_marginLeft="10"
                android:background="#673AB7"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="hila"
                android:textColor="#FFC107"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50"
                android:layout_height="50"
                android:layout_marginStart="240"
                android:layout_marginLeft="240"
                app:srcCompat="@android:drawable/sym_action_call" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="10"
                android:layout_marginLeft="10"
                android:layout_marginTop="30dp"
                android:background="#673AB7"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="elmira"
                android:textColor="#FF9800" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="237"
                android:layout_marginLeft="237"
                android:layout_marginTop="30"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/sym_action_call" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>